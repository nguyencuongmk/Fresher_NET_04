@using leave_management.Models
@model CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Allocation</h1>

<table id="tblLeaveAllocation" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeaveTypes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-outline-success" asp-action="SetLeave" asp-route-id="@item.Id">
                        <i class="fas fa-pencil-alt"></i>
                        Allocate to Employees
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#tblLeaveAllocation').DataTable();
        });
    </script>
}