<div class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="#" class="h1">Register</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Create a new account</p>

                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <div class="input-group-append">
                            <input asp-for="Input.FirstName" class="form-control" placeholder="First Name">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group mb-3">
                        <div class="input-group-append">
                            <input asp-for="Input.LastName" class="form-control" placeholder="Last Name">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group mb-3">
                        <div class="input-group-append">
                            <input asp-for="Input.Email" class="form-control" placeholder="Email">
                            <div class="input-group-text">
                                <i class="fas fa-envelope"></i>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group mb-3">
                        <div class="input-group-append">
                            <input asp-for="Input.Password" class="form-control" placeholder="Password">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group mb-3">
                        <div class="input-group-append">
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                </form>
                <br />
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-center">I already have an account</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}